<Window x:Class="WPFResumeBuilder.PhoneEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFResumeBuilder"
        mc:Ignorable="d"
        Title="PhoneEdit" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Height="300px">Phone:</Label>
        <TextBox Grid.Column="1" Height="300px" Name="PhoneInput"></TextBox>
        <Button Content="Save" HorizontalAlignment="Left" Margin="34,393,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
